<h1>Eat Da Burger!</h1>

<div class="row">
	<div class="col-md-6">
		<img src="/assets/VeggieBurger.jpeg" alt="burger">
	</div>
	<div class="col-md-6">
		<h2>Add a New Burger</h2>
		<form class="create-form">
  			<div class="form-group">
    			<label for="addBurger">Burger Name:</label>
    			<input type="text" id="addBurger" name="name">
  			</div>
  			<button type="submit" class="create-form">Add Burger</button>
		</form>
	</div>
</div>

<div class="row">

<div class="col-md-6">

	<h2>Available Burgers</h2>
	<h4>Pick your favorite</h4>
	<ul>
		{{#each burgers}}
			{{#unless this.devoured}}
		
			<li>
				{{this.id}}.{{this.burger_name}}

				<button type="submit" class="change-devoured" data-id="{{id}}"">DEVOUR IT</button>
			</li>
		
			{{/unless}}
		{{/each}}
	</ul>
</div>

<div class="col-md-6">

	<h2>Devoured Burgers</h2>
	<h4>Sorry, no longer available!</h4>
	<ul>
		{{#each burgers}}
			{{#if this.devoured}}

			<li>
				{{this.id}}.{{this.burger_name}}
			</li>

			{{/if}}
		{{/each}}
	</ul>
</div>

</div>






